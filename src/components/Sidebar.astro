    function handleClick() {
      const buttonMenu = document.getElementById("buttonMenu");
      if (buttonMenu?.innerText == "Menu") {
        document
          .getElementById("menu")
          ?.classList.replace("max-lg:hidden", "max-lg:block");
        document
          .getElementById("divmenu")
          ?.classList.replace("absolute", "fixed");

        if (buttonMenu) {
          buttonMenu.innerText = "Close Menu";
        }
      } else {
        document
          .getElementById("menu")
          ?.classList.replace("max-lg:block", "max-lg:hidden");
        document
          .getElementById("divmenu")
          ?.classList.replace("fixed", "absolute");
        if (buttonMenu) {
          buttonMenu.innerText = "Menu";
        }
      }
    }
