---

import { SITE_TITLE_REF, SITE_TITLE } from '../consts';
---

<header class=" ">
	<h1>
		<span class="site-title-ref uppercase">
			{SITE_TITLE_REF}
		</span>
		<span class="site-title ">
			{SITE_TITLE}
		</span>
	</h1>
	
</header>
<style>
	h1 {
		margin: 0.5em 0;
		font-family: math;
		position: relative;
		overflow: hidden;
	}
	.site-title-ref{
		position: relative;
		z-index: 2;
		padding-bottom: 20px;
		/* background-color: white; */
		/* letter-spacing: 0.3ch; */
		transition: cubic-bezier(0.175, 0.885, 0.32, 1.275) 2s;
	}
	.site-title{
		z-index: 1;
		position: absolute;
    opacity: 0;
		transform: translateX(-100%);
		transition: cubic-bezier(0.175, 0.885, 0.32, 1.275) 2s;
	}
	
	h1:hover .site-title{
		transform: translateX(0px);
		left: 0;
    opacity: 1;
		transition: cubic-bezier(0.175, 0.885, 0.32, 1.275) 2s;
	}
	h1:hover .site-title-ref{
		opacity: 0;
		transition: cubic-bezier(0.175, 0.885, 0.32, 1.275) 2s;
	}
	
	@media all and (max-device-width: 700px){
		header{
		margin: 0em 0 2em;
		display: block;
		align-items: center;
		/* grid-template-columns: repeat(2, minmax(0, 1fr)); */
		}
		h1 {
			font-size: large;
			text-align: center;
			margin: 0.8em 0;
		}
		nav{
		text-align: center;
	}
	h1:hover .site-title{
		transform: translateX(-50%);
		left: 50%;
		transition: cubic-bezier(0.175, 0.885, 0.32, 1.275) 2s;
	}
}
</style>
